<div class="container">
<br>
  <div class="card p-5 text-center">
<h1>Your Booking</h1>
  <br>
  <h3><%= @booking.local.name %></h3>
  <p><%= @booking.user.email %></p>
  <p><%= @booking.checkin_date %></p>
  <p><%= @booking.checkout_date %></p>
  <p><%= @booking.pet_name %></p>
  <p><%= @booking.pet_type %></p>
  <p><%= @booking.pet_weight %></p>
  <p><%= @booking.status %></p>
  <%= link_to 'Back', locals_path, class:"btn-flat-show  m-1 py-3" %>
  <%= link_to 'Edit', edit_booking_path(@booking), class:"btn-flat-show  m-1 py-3" %>
  <%= link_to 'Delete', booking_path(@booking), method: :delete, data: { confirm: "Are you sure?" }, class:"btn-flat-show-delete  m-1 py-3" %>
    </div>
</div>
  
  