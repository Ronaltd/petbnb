<div class="container-fluid mt-2">
  <div class='d-flex justify-content-center align-items-center '>
    <div class="card text-center">
      <div class='row'>
        <div class='col-12 col-md-6 mt-3'>
          <figure class="figure px-3">
            <img src="https://q4g9y5a8.rocketcdn.me/wp-content/uploads/2020/02/home-banner-2020-02-min.jpg" alt="" class="figure-img img-fluid rounded" >
          </figure>
        </div>

        <div class='col-12 col-md-6 my-3 px-5'>
          <h3 class="font-weight-bold"><%= @local.name %></h3>
          <p class='text-justify p-2'><%= @local.descritpion %></p>
          <hr />

          <p class='text-justify p-2'><i class="fas fa-map-marker-alt" style="font-size:30px; color:#457b9d"></i>  <%= @local.city %></p>
          <hr />

          <p class='text-justify p-2'><i class="fas fa-dollar-sign" style="font-size:30x; color:#457b9d"></i>  <%= @local.price %> </p>
          <hr />
          <div class="">
            <%= link_to "Booking", new_local_booking_path(@local), class: 'btn-flat-show py-2' %>
            <% if policy(@local).edit? %>
              <%= link_to 'Edit', edit_local_path(@local), class: 'btn-flat-show m-1 py-2' %>
            <% end %>
            <% if policy(@local).destroy? %>
              <%= link_to 'Delete', local_path(@local), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn-flat-show-delete m-1 py-2' %>
            <% end %>
            <%= link_to 'Back', locals_path %>
          </div>
        </div>
      </div>
    </div>
  </div>

    <% if current_user == @local.user %>
        <% @local.bookings.each do |booking| %>
      <div class="p-3 mb-2 bg-secondary text-white">
        <ul>
          <li>Reserved for <%= booking.pet_type %> : <%= booking.pet_name %> - <%= booking.user.email %> at <%= booking.checkin_date.strftime("%d/%m/%Y") %> - <%= booking.checkout_date.strftime("%d/%m/%Y") %></li>
        </ul>
      </div>
        <% end %>
    <% end %>

  <div class="text-center">
  </div>
</div>
